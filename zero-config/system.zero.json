{
  "scaffold": {
    "paths": {
      "nuxt-plugin": {
        "path": "custom/plugins/${file}",
        "mode": "replace"
      },
      "nuxt-module": {
        "path": "custom/modules/${file}",
        "mode": "replace"
      },
      "system": {
        "path": "custom/${file}"
      },
      "module": {
        "path": "custom/system/modules/${module}/${file}",
        "mode": "replace"
      },
      "script": {
        "path": "custom/scripts/${file}"
      }
    },
    "after": [
      {
        "type": "registry",
        "file": "custom/namespaces/remote.namespace.js",
        "namepattern": "^(remote\\..*)$",
        "include": "_collection"
      }
    ]
  }
}